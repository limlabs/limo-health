{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "module": "Node16",
    "target": "ES2020",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/server/**/*.ts",
    "src/data/**/*.json"
  ],
  "exclude": ["node_modules", "dist"]
}
